<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/11"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.MediManage.LoginController" prefWidth="400" prefHeight="350">

    <children>

        <Label text="Login" layoutX="170" layoutY="20">
            <font>
                <Font size="20"/>
            </font>
        </Label>

        <Label text="Role:" layoutX="25" layoutY="65" />
        <ComboBox fx:id="roleSelector" promptText="Select Role" layoutX="100" layoutY="60" prefWidth="200"/>

        <Label text="Username :" layoutX="25" layoutY="105"/>
        <TextField fx:id="username" promptText="Username" layoutX="100" layoutY="100" prefWidth="200"/>

        <Label text="Password :" layoutX="25" layoutY="145"/>
        <PasswordField fx:id="password" promptText="Password" layoutX="100" layoutY="140" prefWidth="200"/>

        <Button text="Login" layoutX="170" layoutY="190" prefWidth="60" onAction="#handleLogin"/>

        <Label fx:id="message" layoutX="100" layoutY="230" prefWidth="200" style="-fx-text-fill: red;" alignment="CENTER"/>

    </children>
</AnchorPane>
