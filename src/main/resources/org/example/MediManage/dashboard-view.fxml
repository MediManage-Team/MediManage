<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/11"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.MediManage.DashboardController"
            prefWidth="1000" prefHeight="700">

    <children>
        <!-- Main VBox -->
        <VBox spacing="20" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Header -->
            <Label text="Medical Store Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <!-- KPIs Section -->
            <HBox spacing="30">
                <Label fx:id="dailySales" text="Daily Sales: ₹0" style="-fx-font-size: 16px;"/>
                <Label fx:id="totalProfit" text="Total Profit: ₹0" style="-fx-font-size: 16px;"/>
                <Label fx:id="pendingRx" text="Pending Prescriptions: 0" style="-fx-font-size: 16px;"/>
                <Label fx:id="lowStock" text="Low Stock: 0" style="-fx-font-size: 16px;"/>
            </HBox>

            <!-- Inventory Section -->
            <VBox spacing="10">
                <Label text="Inventory" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <!-- Search Field -->
                <HBox spacing="10">
                    <Label text="Search Medicine:"/>
                    <TextField fx:id="searchMedicine" promptText="Enter medicine name"/>
                </HBox>

                <!-- Inventory Table -->
                <TableView fx:id="inventoryTable" prefHeight="200">
                    <columns>
                        <TableColumn fx:id="colMedicine" text="Medicine" prefWidth="200"/>
                        <TableColumn fx:id="colBatch" text="Batch" prefWidth="100"/>
                        <TableColumn fx:id="colExpiry" text="Expiry" prefWidth="120"/>
                        <TableColumn fx:id="colHSN" text="HSN" prefWidth="80"/>
                        <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Billing Section -->
            <VBox spacing="10">
                <Label text="Billing" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <TableView fx:id="billingTable" prefHeight="200">
                    <columns>
                        <TableColumn fx:id="billColName" text="Medicine" prefWidth="200"/>
                        <TableColumn fx:id="billColQty" text="Quantity" prefWidth="100"/>
                        <TableColumn fx:id="billColPrice" text="Price" prefWidth="100"/>
                        <TableColumn fx:id="billColGST" text="GST (%)" prefWidth="80"/>
                        <TableColumn fx:id="billColTotal" text="Total" prefWidth="120"/>
                    </columns>
                </TableView>

                <HBox spacing="20" alignment="CENTER_LEFT">
                    <Label text="Total Amount:" style="-fx-font-size: 16px;"/>
                    <Label fx:id="lblTotal" text="₹0" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                </HBox>

                <HBox spacing="20">
                    <Button fx:id="btnAddBill" text="Add to Bill" prefWidth="120"/>
                    <Button fx:id="btnGenerateInvoice" text="Generate Invoice" prefWidth="150"/>
                </HBox>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
